

{% macro importerTableView(data, hideHeader=false) %}
    {% set obj = importerMappedData(data) %}
    {% set headers = obj.headers %}
    {% set rows = obj.rows %}

    <table class="selectable govuk-body" data-persist-selection="true">
        {% if not hideHeader %}
        <thead>
            <tr>
            {% for h in headers %}
                <th>{{h}}</th>
            {% endfor %}
            </tr>
        </thead>
        {% endif %}
        <tbody>
            {% for row in rows %}
            <tr>
                {% for cell in row %}
                <td>{{cell}}</td>
                {% endfor %}
            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endmacro %}